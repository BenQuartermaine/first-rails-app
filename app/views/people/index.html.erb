<h1>All the people</h1>

<div class="input-group mb-3">
    <div class="input-group-prepend">
      <label class="input-group-text"for="inputGroupSelect01">Category</label>
      <%= collection_select(:people, :name, Person.all, :name, :name, {}) %>
    </div>
  </div>

  <%= link_to 'Elderly', above_people_path, class: "btn btn-primary" %>
  <%= link_to 'Youth', below_people_path, class: "btn btn-secondary" %>
  <%= link_to "Create New", new_person_path, class: "btn btn-light" %>


<div class="my-5"></div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<div class="my-5"></div>

<% if !@filter.nil? %>    
  <% @filter.each do |person| %>
    <h1><%= link_to person.name, person_path(person) %></h1>
  <% end %><% end %>

<% if @filter.nil? %>       
  <% @people.each do |person| %>
    <h1><%= link_to person.name, person_path(person) %></h1>
  <% end %><% end %>



